{
  "name": "mint-website",
  "source-directories": [
    "source"
  ],
  "application": {
    "title": "Mint - A refreshing language for the front-end web",
    "orientation": "portrait",
    "theme-color": "#2f9e59",
    "display": "standalone",
    "name": "Mint",
    "meta": {
      "charset": "utf-8",
      "description": "Mint is a refreshing programming language for the front-end web.",
      "keywords": [
        "mint",
        "mint-lang",
        "javascript",
        "transplier",
        "framework"
      ],
      "viewport": "width=device-width, initial-scale=1, shrink-to-fit=no"
    },
    "icon": "assets/icon.png",
    "head": "assets/head.html"
  },
  "dependencies": {
    "mint-core": {
      "repository": "https://github.com/mint-lang/core",
      "constraint": "0.3.0 <= v < 1.0.0"
    },
    "mint-codemirror": {
      "repository": "https://github.com/mint-lang/mint-codemirror",
      "constraint": "3.0.0 <= v < 4.0.0"
    }
  }
}
